<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6">Top Rated Movies</h1>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <% @movies.each do |movie| %>
      <div class="max-w-sm rounded overflow-hidden shadow-lg">
        <img class="w-full" src="https://image.tmdb.org/t/p/w500<%= movie['poster_path'] %>" alt="<%= movie['title'] %>">
        <div class="px-6 py-4">
          <div class="font-bold text-xl mb-2"><%= movie['title'] %></div>
          <p class="text-gray-700 text-base">
            <%= truncate(movie['overview'], length: 100) %>
          </p>
        </div>
        <div class="px-6 pt-4 pb-2">
          <span class="inline-block bg-gray-200 rounded-full px-3 py-1 text-sm font-semibold text-gray-700 mr-2 mb-2">Rating: <%= (movie['vote_average']).round(1) %></span>
          <a href="<%= movie_path(movie['id']) %>" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" >
            View Details
          </a>
        </div>
      </div>
    <% end %>
  </div>
</div>

