<%=turbo_frame_tag "review_#{review.id}" do%>
<div class="mb-4 p-6 border rounded-lg shadow-lg bg-white">
  <div class="flex justify-between items-center">
    <p class="text-lg font-bold text-gray-700">User ID: <%= review.user_id %></p>
    
  </div>
  <p class="mt-2 text-gray-600"><%= review.comment %></p>
  <p class="mt-4 font-semibold text-yellow-600">Rating: <%= review.rating %></p>
  <%= button_to "Delete", movie_review_path(review), method: :delete, class: 'text-red-500 hover:text-red-700 font-semibold text-sm'%>
</div>

<%=review.inspect%>
<% end %>